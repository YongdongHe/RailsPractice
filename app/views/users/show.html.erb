	<p id="notice">
		<%= notice %>
	</p>
	<% provide(:title, @user.name) %>
</div>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="row">
	<div class="container col-md-5 main-content" id="info_show_name">
		<h1>
			<%= @user.name %>
		</h1>
		<%= gravatar_for @user %>		
		<br>
	</div>
</div>

<section>
	<%= render 'shared/stats' %>
</section>

<div class="span8">
    <%= render 'follow_form' if signed_in? %>
 </div>

<div class="row">
	 <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
</div>


